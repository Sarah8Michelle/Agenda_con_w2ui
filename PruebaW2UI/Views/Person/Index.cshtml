@model PruebaW2UI.Models.Person

@{
    ViewData["Title"] = "Persona";
}

<link href="~/lib/w2ui/w2ui-1.5.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <span class="font-weight-bold mt-5">Personas</span>
            </div>
            <div class="card-body">
                <div id="personGrid" style="width: 100%; height: 512px;"></div>
                <br>
                <label>
                    <input type="checkbox" id="autoLoad" onclick="refreshGrid(this.checked)" checked>
                    Auto Load
                </label>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/w2ui/w2ui-1.5.min.js"></script>
<script src="~/js/views/person/index.js"></script>
<script src="~/js/views/person/createOrEdit.js"></script>